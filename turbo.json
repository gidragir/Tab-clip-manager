{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#lint": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#lint:fix": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#format": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "//#format:fix": {
      "inputs": ["!.git/**", "!node_modules/**", "!packages/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "format:fix": {},
    "test": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    }
  },
  "globalDependencies": [
    ".eslintrc.js",
    ".eslintignore",
    ".lintstagedrc.js",
    ".prettierrc.yaml",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
